<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.shorbgy.ecommerceapp.ui.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_itemFragment"
            app:destination="@id/itemFragment" />
        <action
            android:id="@+id/action_nav_home_to_adminItemFragment"
            app:destination="@id/adminItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.shorbgy.ecommerceapp.ui.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/itemFragment"
        android:name="com.shorbgy.ecommerceapp.ui.ItemFragment"
        android:label="fragment_item"
        tools:layout="@layout/fragment_item" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.shorbgy.ecommerceapp.ui.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" >
        <action
            android:id="@+id/action_cartFragment_to_shipmentFragment"
            app:destination="@id/shipmentFragment" />
    </fragment>
    <fragment
        android:id="@+id/shipmentFragment"
        android:name="com.shorbgy.ecommerceapp.ui.ShipmentFragment"
        android:label="fragment_shipment"
        tools:layout="@layout/fragment_shipment" />
    <fragment
        android:id="@+id/adminItemFragment"
        android:name="com.shorbgy.ecommerceapp.ui.AdminItemFragment"
        android:label="fragment_admin_item"
        tools:layout="@layout/fragment_admin_item" />

</navigation>
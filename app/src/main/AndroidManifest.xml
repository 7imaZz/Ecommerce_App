<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.shorbgy.ecommerceapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EcommerceApp"
        tools:ignore="AllowBackup">
        <activity android:name=".ui.admin_orders_activity.AdminOrdersActivity" />
        <activity
            android:name=".ui.home_activity.HomeActivity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.EcommerceApp.NoActionBar"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".ui.admin_category_activity.AdminCategory" />
        <activity android:name=".ui.admin_activity.AdminActivity" />
        <activity android:name=".ui.register_activity.RegisterActivity" />
        <activity android:name=".ui.login_activity.LoginActivity" />
        <activity android:name=".ui.welcome_activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>